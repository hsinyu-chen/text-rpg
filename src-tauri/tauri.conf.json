{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "text-rpg",
  "version": "0.1.0",
  "identifier": "com.textrpg.app",
  "build": {
    "frontendDist": "../dist/text-rpg/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Text RPG",
        "width": 1648,
        "height": 924,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}